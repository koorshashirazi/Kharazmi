{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "BuildDebug",
        "BuildRelease",
        "Clean",
        "CommitChanges",
        "Compile",
        "Pack",
        "PublishToNuGet",
        "PushToGitHub",
        "Report",
        "Restore",
        "SetupLocalFeed",
        "Test",
        "UpdatePackages",
        "UpdateSpecificPackage"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "CommitMessage": {
          "type": "string"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "GitCommand": {
          "type": "string",
          "description": "The git command"
        },
        "GitHubBranch": {
          "type": "string"
        },
        "GitHubToken": {
          "type": "string",
          "description": "Github secure token",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "GitHubUsername": {
          "type": "string"
        },
        "IncrementMajorVersion": {
          "type": "boolean",
          "description": "Increment major version"
        },
        "IncrementMinorVersion": {
          "type": "boolean",
          "description": "Increment minor version"
        },
        "IncrementPatchVersion": {
          "type": "boolean",
          "description": "Increment Patch Version"
        },
        "MajorVersion": {
          "type": "integer",
          "description": "Major version",
          "format": "int32"
        },
        "MinorVersion": {
          "type": "integer",
          "description": "Minor version",
          "format": "int32"
        },
        "NewVersion": {
          "type": "string",
          "description": "New version for packages"
        },
        "NuGetApiKey": {
          "type": "string",
          "description": "Nuget api key",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "PackagePrefix": {
          "type": "string",
          "description": "Prefix of packages to update"
        },
        "PackagesToUpdate": {
          "type": "string",
          "description": "Packages to update. Example: 'Kharazmi.AspNetCore: 3.0.0, Kharazmi.EfCore: 3.0.1' "
        },
        "PatchVersion": {
          "type": "integer",
          "description": "Patch version",
          "format": "int32"
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "VersionFile": {
          "type": "string",
          "description": "Version maintenance file"
        },
        "VersionPrefix": {
          "type": "string",
          "description": "Version prefix (e.g. alpha, beta)"
        },
        "VersionSuffix": {
          "type": "string",
          "description": "Version suffix (e.g. alpha.1, beta.2)"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
